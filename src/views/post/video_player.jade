doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="robots",content="noindex")
        title #{post.user.name}@#{post.user.screenName}さんの投稿 - “#{post.text}” - kyoppie
        style.
            video{
                position:fixed;
                top:0;
                bottom:0;
                left:0;
                right:0;
                width:100%;
                height:100%;
                width:100vw;
                height:100vh;
            }
    body
        video(src=post.files[0].url,poster=post.files[0].thumbnailUrl,controls)
